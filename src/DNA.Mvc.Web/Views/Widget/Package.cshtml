@model DNA.Xml.Widgets.WidgetPackage
@{
    var defaultIcon = "data:image/gif;base64,";
    if (Model.Model.Icons != null && Model.Model.Icons.Count > 0)
    {
        defaultIcon = Url.Content(Model.ResolveUri(Model.Model.Icons.FirstOrDefault().Source));
    }
    var widget = Model.Locale(UICulture);
}
<div style="padding: 10px; position: relative;">
    <img src="@defaultIcon" style="height:48px;width:48px;" class="d-inline"/>
    <span class="d-title">@widget.Name.ShortName</span>
    <small style="position: absolute; right: 5px; bottom: 5px;">@Resources.Commons.Version:@widget.Version</small>
</div>
@if (!string.IsNullOrEmpty(widget.Description)) { 
    <div style="padding:10px;">
        @widget.Description
    </div>
}
<div style="padding:0px 10px; text-align: center;">
    <a data-role="button" 
        data-inline="false" 
        data-default="true" 
        onclick="app.widgets.enable('@Model.Name','@Model.Category');$.closePanels();$('li[data-id=@Model.Model.ID]').find('.d-item-counter').remove();$('li[data-id=@Model.Model.ID]').children('a[data-rel=panel]').attr('href','@(Url.Action("Edit", "Widget")+"?locale="+Culture+"&installPath="+Model.Category+@"\\"+Model.Name)')">@Resources.Commons.Enable</a>
    <a data-role="button" data-inline="false" 
        target="_blank" href="http://www.dotnetage.com/home/en-US/widgets/locate/@(widget.ID)">@Resources.Commons.Detail</a>
    <a data-role="button" data-inline="false" onclick="_uninstall_package('@Model.Name');$.closePanels();">@Resources.Commons.Delete</a>
</div>
